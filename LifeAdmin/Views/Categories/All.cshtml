@using ViewModels
@model IEnumerable<CategoryListViewModel>

@{
    ViewData["Title"] = "Categories";
    bool isAdmin = User.IsInRole("Admin");
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Categories</h2>

    @if (isAdmin)
    {
        <a class="btn btn-primary" asp-action="Create">+ Create</a>
    }
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>

            @if (isAdmin)
            {
                <th class="text-end">Actions</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Name</td>

                @if (isAdmin)
                {
                    <td class="text-end">
                        <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@c.Id">Edit</a>
                        <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@c.Id">Delete</a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
