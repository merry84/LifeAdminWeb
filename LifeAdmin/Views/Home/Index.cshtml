@model ViewModels.DashboardStatsViewModel

@if (!(User.Identity?.IsAuthenticated ?? false))
{
    <div class="landing-hero p-4 p-md-5 mb-4 rounded-4">
        <div class="row align-items-center g-4">
            <div class="col-12 col-lg-7">
                <h1 class="display-5 fw-semibold mb-3">
                    Organize your life.
                    <br class="d-none d-md-block" />
                    One simple dashboard.
                </h1>

                <p class="text-muted mb-4 lead">
                    Tasks, notes and categories in one clean, secure workspace.
                </p>
                <div class="d-flex flex-column flex-sm-row gap-2">
                    <a class="btn btn-primary dash-pill px-4"
                       asp-area="Identity" asp-page="/Account/Register">Get Started</a>

                    <a class="btn btn-outline-secondary dash-pill px-4"
                       asp-area="Identity" asp-page="/Account/Login">I already have an account</a>
                </div>

            </div>

            <div class="col-12 col-lg-5">
                <div class="landing-card p-4 rounded-4">
                    <div class="d-flex align-items-center gap-3 mb-3">
                        <div class="landing-icon">✅</div>
                        <div>
                            <div class="fw-semibold">Task Management</div>
                            <div class="text-muted small">Create, edit, track status.</div>
                        </div>
                    </div>

                    <div class="d-flex align-items-center gap-3 mb-3">
                        <div class="landing-icon">📝</div>
                        <div>
                            <div class="fw-semibold">Quick Notes</div>
                            <div class="text-muted small">Save ideas and reminders.</div>
                        </div>
                    </div>

                    <div class="d-flex align-items-center gap-3">
                        <div class="landing-icon">🏷️</div>
                        <div>
                            <div class="fw-semibold">Categories</div>
                            <div class="text-muted small">Organize everything cleanly.</div>
                        </div>
                    </div>

                    <hr class="my-4" />

                    <div class="text-muted small">
                        Your content is protected with authentication and owner-based access.
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-12 col-md-4">
            <div class="card p-4 h-100">
                <div class="d-flex align-items-center gap-3 mb-2">
                    <div class="landing-icon-sm">⚡</div>
                    <h5 class="mb-0">Fast workflow</h5>
                </div>
                <div class="text-muted">Create tasks and notes in seconds with a clean UI.</div>
            </div>
        </div>

        <div class="col-12 col-md-4">
            <div class="card p-4 h-100">
                <div class="d-flex align-items-center gap-3 mb-2">
                    <div class="landing-icon-sm">🔒</div>
                    <h5 class="mb-0">Secure by default</h5>
                </div>
                <div class="text-muted">Identity login + authorization so only you access your data.</div>
            </div>
        </div>

        <div class="col-12 col-md-4">
            <div class="card p-4 h-100">
                <div class="d-flex align-items-center gap-3 mb-2">
                    <div class="landing-icon-sm">✨</div>
                    <h5 class="mb-0">Modern look</h5>
                </div>
                <div class="text-muted">Glass UI, soft background and consistent components.</div>
            </div>
        </div>
    </div>
}
else
{
    <div class="dash-hero p-4 p-md-5 mb-4 rounded-4">
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3">
            <div>
               
                <h1 class="display-6 fw-semibold mb-1">Dashboard</h1>
                <p class="text-muted mb-0">Quick overview of your work today.</p>
            </div>

            <div class="d-flex gap-2">
                <a class="btn btn-primary btn-sm px-3 dash-pill"
                   asp-controller="Tasks" asp-action="Create">+ New Task</a>

                <a class="btn btn-outline-secondary btn-sm px-3 dash-pill"
                   asp-controller="Notes" asp-action="Create">+ New Note</a>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <!-- Tasks -->
        <div class="col-12 col-md-4">
            <div class="card dash-card h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <div class="text-muted small">My Tasks</div>
                            <div class="dash-number">@Model.MyTasksCount</div>
                        </div>
                        <div class="dash-icon">✅</div>
                    </div>

                    <div class="mt-3 text-muted">Open and manage your tasks.</div>

                    <div class="mt-3">
                        <a class="btn btn-outline-secondary btn-sm w-100 dash-pill"
                           asp-controller="Tasks" asp-action="All">
                            Open Tasks
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Notes -->
        <div class="col-12 col-md-4">
            <div class="card dash-card h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <div class="text-muted small">Notes</div>
                            <div class="dash-number">@Model.MyNotesCount</div>
                        </div>
                        <div class="dash-icon">📝</div>
                    </div>

                    <div class="mt-3 text-muted">Keep quick ideas and reminders.</div>

                    <div class="mt-3">
                        <a class="btn btn-outline-secondary btn-sm w-100 dash-pill"
                           asp-controller="Notes" asp-action="All">
                            Open Notes
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Categories -->
        <div class="col-12 col-md-4">
            <div class="card dash-card h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <div class="text-muted small">Categories</div>
                            <div class="dash-number">@Model.CategoriesCount</div>
                        </div>
                        <div class="dash-icon">🏷️</div>
                    </div>

                    <div class="mt-3 text-muted">Manage categories for better organization.</div>

                    <div class="mt-3">
                        <a class="btn btn-outline-secondary btn-sm w-100 dash-pill"
                           asp-controller="Categories" asp-action="All">
                            Open Categories
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
