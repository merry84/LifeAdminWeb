@model ViewModels.DashboardStatsViewModel

@if (!(User.Identity?.IsAuthenticated ?? false))
{
    <div class="p-4 p-md-5 bg-white rounded-4 shadow-sm">
        <h1 class="display-6 fw-semibold mb-2">LifeAdmin</h1>
        <p class="text-muted mb-3">Organize tasks, notes and categories in one place.</p>
        <a class="btn btn-primary dash-pill" asp-area="Identity" asp-page="/Account/Login">Login</a>
        <a class="btn btn-outline-secondary ms-2 dash-pill" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </div>
}
else
{
    <div class="dash-hero p-4 p-md-5 mb-4 rounded-4">
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3">
            <div>
               
                <h1 class="display-6 fw-semibold mb-1">Dashboard</h1>
                <p class="text-muted mb-0">Quick overview of your work today.</p>
            </div>

            <div class="d-flex gap-2">
                <a class="btn btn-primary btn-sm px-3 dash-pill"
                   asp-controller="Tasks" asp-action="Create">+ New Task</a>

                <a class="btn btn-outline-secondary btn-sm px-3 dash-pill"
                   asp-controller="Notes" asp-action="Create">+ New Note</a>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <!-- Tasks -->
        <div class="col-12 col-md-4">
            <div class="card dash-card h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <div class="text-muted small">My Tasks</div>
                            <div class="dash-number">@Model.MyTasksCount</div>
                        </div>
                        <div class="dash-icon">✅</div>
                    </div>

                    <div class="mt-3 text-muted">Open and manage your tasks.</div>

                    <div class="mt-3">
                        <a class="btn btn-outline-secondary btn-sm w-100 dash-pill"
                           asp-controller="Tasks" asp-action="All">
                            Open Tasks
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Notes -->
        <div class="col-12 col-md-4">
            <div class="card dash-card h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <div class="text-muted small">Notes</div>
                            <div class="dash-number">@Model.MyNotesCount</div>
                        </div>
                        <div class="dash-icon">📝</div>
                    </div>

                    <div class="mt-3 text-muted">Keep quick ideas and reminders.</div>

                    <div class="mt-3">
                        <a class="btn btn-outline-secondary btn-sm w-100 dash-pill"
                           asp-controller="Notes" asp-action="All">
                            Open Notes
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Categories -->
        <div class="col-12 col-md-4">
            <div class="card dash-card h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <div class="text-muted small">Categories</div>
                            <div class="dash-number">@Model.CategoriesCount</div>
                        </div>
                        <div class="dash-icon">🏷️</div>
                    </div>

                    <div class="mt-3 text-muted">Manage categories for better organization.</div>

                    <div class="mt-3">
                        <a class="btn btn-outline-secondary btn-sm w-100 dash-pill"
                           asp-controller="Categories" asp-action="All">
                            Open Categories
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
