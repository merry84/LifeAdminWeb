@using LifeAdminModels.Models
@using LifeAdminServices.Contracts
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@inject ILayoutService LayoutService


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LifeAdmin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LifeAdmin.styles.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow ">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">LifeAdmin</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Tasks" asp-action="All">My Tasks</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Users" asp-action="Profile">Profile</a>
                            </li>


                            @if (User.IsInRole(SeedData.AdminRoleName))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Tasks" asp-action="AllUsers">All Tasks</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Categories" asp-action="All">Categories</a>
                                </li>
                            }
                        }

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
                        </li>
                    </ul>

                    <partial name="_LoginPartial" />
                    
                </div>
            </div>
        </nav>
    </header>
    <partial name="_Notifications" />
    <main role="main" class="container flex-grow-1 py-3">
        @RenderBody()
    </main>


    <footer class="border-top footer text-muted py-2">
        <div class="container">
            &copy; 2026 - LifeAdmin - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var toasts = document.querySelectorAll('.js-toast');
            toasts.forEach(function (el) {
                var t = new bootstrap.Toast(el, { autohide: true, delay: 3500 });
                t.show();
            });
        });
    </script>   

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
