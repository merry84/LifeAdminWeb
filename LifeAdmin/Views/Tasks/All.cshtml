@model IEnumerable<ViewModels.TaskListViewModel>
@using LifeAdminModels.Models

@functions {
    string StatusBadgeClass(WorkStatus status) => status switch
    {
        WorkStatus.Planned => "bg-secondary",
        WorkStatus.InProgress => "bg-primary",
        WorkStatus.Done => "bg-success",
        _ => "bg-dark"
    };

    string StatusText(WorkStatus status) => status switch
    {
        WorkStatus.Planned => "Planned",
        WorkStatus.InProgress => "In Progress",
        WorkStatus.Done => "Done",
        _ => status.ToString()
    };
}

@{
    ViewData["Title"] = "My Tasks";
}

<!-- Header responsive -->
<div class="d-flex flex-column flex-sm-row justify-content-between align-items-sm-center gap-2 mb-3">
    <h2 class="mb-0">My Tasks</h2>
    <a class="btn btn-primary" asp-action="Create">+ Create</a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info d-flex align-items-center" role="alert">
        <span class="me-2">ℹ️</span>
        <div>You don’t have any tasks yet. Click <strong>Create</strong> to add your first task.</div>
    </div>
}
else
{
    <!-- RESPONSIVE TABLE WRAPPER -->
    <div class="table-responsive">
        <table class="table table-hover table-sm align-middle">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Category</th>
                    <th>Status</th>
                    <th class="text-nowrap">Created</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var t in Model)
                {
                    <tr class="@(t.Status == WorkStatus.Done ? "table-success" : "")">

                        <td class="fw-semibold">@t.Title</td>
                        <td>@t.CategoryName</td>

                        <td>
                            <span class="badge @StatusBadgeClass(t.Status)">
                                @StatusText(t.Status)
                            </span>
                        </td>

                        <td class="text-muted text-nowrap">
                            @t.CreatedOn.ToLocalTime().ToString("dd.MM.yyyy HH:mm")
                        </td>

                        <td class="text-end">
                            <!-- FLEX WRAP ACTIONS -->
                            <div class="d-flex flex-wrap justify-content-end gap-2">
                                <a class="btn btn-sm btn-outline-secondary"
                                   asp-action="Details" asp-route-id="@t.Id">Details</a>

                                <a class="btn btn-sm btn-outline-primary"
                                   asp-action="Edit" asp-route-id="@t.Id">Edit</a>

                                <a class="btn btn-sm btn-outline-danger"
                                   asp-action="Delete" asp-route-id="@t.Id">Delete</a>
                            </div>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
}
