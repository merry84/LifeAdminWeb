@model IEnumerable<ViewModels.TaskListViewModel>



@{
    ViewData["Title"] = "My Tasks";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">My Tasks</h2>
    <a class="btn btn-primary" asp-action="Create">+ Create</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Category</th>
            <th>Status</th>
            <th>Created</th>
            <th class="text-end">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.Title</td>
                <td>@t.CategoryName</td>
                <td>@t.Status</td>
                <td>@t.CreatedOn.ToLocalTime().ToString("dd.MM.yyyy HH:mm")</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@t.Id">Details</a>
                    <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@t.Id">Edit</a>
                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@t.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
