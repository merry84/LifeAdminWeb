@model IEnumerable<ViewModels.TaskListViewModel>
@using LifeAdminModels.Models

@functions {
    string StatusBadgeClass(WorkStatus status) => status switch
    {
        WorkStatus.Planned => "bg-secondary",
        WorkStatus.InProgress => "bg-primary",
        WorkStatus.Done => "bg-success",
        _ => "bg-dark"
    };

    string StatusText(WorkStatus status) => status switch
    {
        WorkStatus.Planned => "Planned",
        WorkStatus.InProgress => "In Progress",
        WorkStatus.Done => "Done",
        _ => status.ToString()
    };
}

@{
    ViewData["Title"] = "All Tasks (Users)";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">All Tasks (Users)</h2>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">No tasks yet.</div>
}
else
{
    <div class="table-responsive">

    <table class="table table-hover align-middle">
        <thead>
            <tr>
                <th>Title</th>
                <th>Category</th>
                <th>Status</th>
                <th class="text-nowrap">Created</th>
                <th>Owner</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var t in Model)
            {
                <tr class="@(t.Status == WorkStatus.Done ? "table-success" : "")">
                    <td class="fw-semibold">@t.Title</td>
                    <td>@t.CategoryName</td>
                    <td>
                        <span class="badge @StatusBadgeClass(t.Status)">
                            @StatusText(t.Status)
                        </span>
                    </td>
                    <td class="text-muted text-nowrap">
                        @t.CreatedOn.ToLocalTime().ToString("dd.MM.yyyy HH:mm")
                    </td>
                    <td class="text-nowrap">
                        <div class="fw-semibold">@t.OwnerUserName</div>
                        <div class="text-muted small">@t.OwnerEmail</div>
                    </td>
                    <td class="text-end">
                        <div class="btn-group btn-group-sm" role="group">
                            <a class="btn btn-outline-secondary" asp-action="Details" asp-route-id="@t.Id">Details</a>
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@t.Id">Edit</a>
                            <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@t.Id">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
	</div>
}
