@model LifeAdminModels.Models.TaskItem
@{
    ViewData["Title"] = "Delete Task";
}

<h2>Delete Task</h2>

<div class="alert alert-warning mt-3">
    Are you sure you want to delete: <strong>@Model.Title</strong>?
</div>

<form method="post" asp-action="DeleteConfirmed">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Yes, delete</button>
    <a class="btn btn-secondary" asp-action="All">Cancel</a>
</form>
