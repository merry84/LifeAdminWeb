@model ViewModels.TaskDetailsViewModel

@{
    ViewData["Title"] = "Task Details";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">@ViewData["Title"]</h2>
    <a class="btn btn-outline-secondary" asp-action="All">Back</a>
</div>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">@Model.Title</h4>

        <dl class="row mt-3 mb-0">
            <dt class="col-sm-3">Category</dt>
            <dd class="col-sm-9">@Model.CategoryName</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">@Model.Status</dd>

            <dt class="col-sm-3">Created</dt>
            <dd class="col-sm-9">@Model.CreatedOn.ToLocalTime().ToString("dd.MM.yyyy HH:mm")</dd>

            @if (!string.IsNullOrWhiteSpace(Model.Description))
            {
                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">@Model.Description</dd>
            }
        </dl>
    </div>
</div>
