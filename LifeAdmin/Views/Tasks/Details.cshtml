@model ViewModels.TaskDetailsViewModel
@using LifeAdminModels.Models
@functions {
    string StatusBadgeClass(WorkStatus status) => status switch
    {
        WorkStatus.Planned => "bg-secondary",
        WorkStatus.InProgress => "bg-primary",
        WorkStatus.Done => "bg-success",
        _ => "bg-dark"
    };

    string StatusText(WorkStatus status) => status switch
    {
        WorkStatus.Planned => "Planned",
        WorkStatus.InProgress => "In Progress",
        WorkStatus.Done => "Done",
        _ => status.ToString()
    };
}
@{
    ViewData["Title"] = "Task Details";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">@ViewData["Title"]</h2>
    <a class="btn btn-outline-secondary" asp-action="All">Back</a>
</div>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">@Model.Title</h4>

        <dl class="row mt-3 mb-0">
            <dt class="col-sm-3">Category</dt>
            <dd class="col-sm-9">@Model.CategoryName</dd>

            <dt class="col-sm-3">Status</dt>
            <div class="mb-2">
                <span class="text-muted">Status:</span>
                <span class="badge @StatusBadgeClass(Model.Status)">
                    @StatusText(Model.Status)
                </span>
            </div>


            <dt class="col-sm-3">Created</dt>
            <dd class="col-sm-9">@Model.CreatedOn.ToLocalTime().ToString("dd.MM.yyyy HH:mm")</dd>
            <div class="d-flex justify-content-between align-items-center mt-4">
                <a class="btn btn-outline-secondary" asp-action="All">← Back</a>

                <div class="btn-group" role="group">
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
                </div>
            </div>

            @if (!string.IsNullOrWhiteSpace(Model.Description))
            {
                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">@Model.Description</dd>
            }
        </dl>
    </div>
</div>
